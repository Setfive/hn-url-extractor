{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom", "DOM.Iterable"],
    "types": ["node"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
  ]
}